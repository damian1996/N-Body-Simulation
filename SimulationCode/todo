if(mass < 1000.0) {
      gl_PointSize = 2.0;
    } else if((mass >= 1000.0f) && (mass <= 10000.0)) {
      gl_PointSize = 3.0;
    } else if((mass >= 10000.0) && (mass <= 50000.0)) {
      gl_PointSize = 5.0;
    } else {
      gl_PointSize = 7.0;
    }

